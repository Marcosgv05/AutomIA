{
  "name": "atimo-backend",
  "version": "0.1.0",
  "description": "Ãtimo - Backend SaaS multi-tenant para atendente de IA via WhatsApp",
  "main": "dist/main.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/main.js",
    "start:prod": "npx prisma migrate deploy && node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "dev:api": "npm run start:dev",
    "dev:web": "npm --prefix web run dev",
    "dev:all": "concurrently --kill-others --handle-input --names api,web --prefix none \"npm run dev:api\" \"npm run dev:web\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/client": "^5.19.0",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "helmet": "^8.1.0",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.1",
    "concurrently": "^8.2.2",
    "prisma": "^5.19.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  }
}